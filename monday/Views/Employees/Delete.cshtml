@model mondayWebApp.Models.Employee

@{
    ViewData["Title"] = "Remove an employee";
}

<h1>Remove an employee</h1>

<h3>Do you want to remove the employee ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class = "col-sm-2">
            Last name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeSurname)
        </dd>
        <dt class = "col-sm-2">
            Date of birth
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeDateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            Phone number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeePhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeRole)
        </dd>
        <dt class = "col-sm-2">
            Branch
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd class>
        <dt class = "col-sm-2">
            Project
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeID" />
        <input type="submit" value="Remove an employee" class="btn btn-danger" /> |
        <a asp-action="Index">Return to employee list</a>
    </form>
</div>
