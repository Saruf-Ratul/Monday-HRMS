@model mondayWebApp.Models.Department

@{
    ViewData["Title"] = "Department details";
}

<h1>Department details</h1>

<div>
    <h4>Dział</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Department name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class = "col-sm-2">
            Description of the section
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentDesc)
        </dd>
        <dt class = "col-sm-2">
            Date of creation of the department
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentEstablishmentDate)
        </dd>
        <dt class = "col-sm-2">
            Head of department
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentManager.EmployeeNameSurname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentID">Edit section</a> |
    <a asp-action="Index">Return to the list of departments</a>
</div>
