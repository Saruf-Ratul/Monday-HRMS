@model mondayWebApp.Models.Project

@{
    ViewData["Title"] = "Delete the project";
}

<h1>Delete the project</h1>

<h3>Are you sure you want to delete the project? ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            project name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class = "col-sm-2">
            Project description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectDesc)
        </dd>
        <dt class = "col-sm-2">
            Project assumptions
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectBrief)
        </dd>
        <dt class = "col-sm-2">
            Project completion date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectDeadline)
        </dd>
        <dt class = "col-sm-2">
            Project manager
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager.EmployeeNameSurname)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectID" />
        <input type="submit" value="Delete the project" class="btn btn-danger" /> |
        <a asp-action="Index">Return to project list</a>
    </form>
</div>
