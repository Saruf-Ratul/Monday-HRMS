@model mondayWebApp.Models.ProjectTask

@{
    ViewData["Title"] = "Delete the task";
}

<h1>Delete the task</h1>

<h3>Do you want to delete this task</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Task name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class = "col-sm-2">
            Task completion date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskDeadline)
        </dd>
        <dt class = "col-sm-2">
            Project
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd class>
        <dt class = "col-sm-2">
            Employee
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeNameSurname)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskID" />
        <input type="submit" value="Usu" class="btn btn-danger" /> |
        <a asp-action="Index">Return to task list</a>
    </form>
</div>
